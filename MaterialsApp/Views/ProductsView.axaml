<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MaterialsApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MaterialsApp.Views.ProductsView"
             x:DataType="viewModels:ProductsViewModel">
    <Grid RowDefinitions="50 * 50" Margin="10">
        <HyperlinkButton Command="{Binding NavigateBackCommand}" Margin="5">Назад</HyperlinkButton>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" x:Name="ProdGrid">
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Header="Фамилия" Binding="{Binding Name}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Spacing="10" Grid.Row="2">
        <Button Command="{Binding ViewProductCommand}" CommandParameter="{Binding #ProdGrid.SelectedItem}">Просмотр</Button>
        <Button Command="{Binding Create}">Создать</Button>
        </StackPanel>
    </Grid>
</UserControl>