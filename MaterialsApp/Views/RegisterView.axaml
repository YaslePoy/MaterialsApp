<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MaterialsApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MaterialsApp.Views.RegisterView"
             x:DataType="viewModels:RegisterViewModel">
    <StackPanel HorizontalAlignment="Center" Width="600" Spacing="20">
        <HyperlinkButton Command="{Binding Back}">Назад</HyperlinkButton>
        <TextBlock>Регистрация аккаунта заказчика</TextBlock>
        <TextBox Watermark="Логин" Text="{Binding Login}"></TextBox>
        <TextBox Watermark="Пароль" Text="{Binding Password}" PasswordChar="+"></TextBox>
        <TextBox Text="{Binding Name}" Watermark="ФИО"></TextBox>
        <Button HorizontalAlignment="Center" Width="300" Command="{Binding RegisterCommand}">Регистрация</Button>
    </StackPanel>
</UserControl>
