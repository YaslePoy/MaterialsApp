<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MaterialsApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MaterialsApp.Views.MaterialView"
             x:DataType="viewModels:MaterialViewModel">
    <DockPanel Margin="10" LastChildFill="True">
        <HyperlinkButton Margin="10" DockPanel.Dock="Top" Command="{Binding NavigateBackCommand}">Назад</HyperlinkButton>
        <ScrollViewer Margin="10">
            <StackPanel Spacing="10">
                <TextBox IsReadOnly="True" Name="Артикул" Text="{Binding Inner.Article}"></TextBox>
                <TextBox IsReadOnly="{Binding ReadOnly}" Watermark="Название" Text="{Binding Inner.Name}"></TextBox>
                <TextBox IsReadOnly="{Binding ReadOnly}" Watermark="Цена" Text="{Binding Inner.Price}"></TextBox>
                <TextBox IsReadOnly="{Binding ReadOnly}" Watermark="Еденица измерения" Text="{Binding Inner.Unit}"></TextBox>
                <TextBox IsReadOnly="{Binding ReadOnly}" Watermark="Количество на складе" Text="{Binding Inner.Count}"></TextBox>
                <TextBox IsReadOnly="{Binding ReadOnly}" Watermark="Характеристики"
                         Text="{Binding Inner.Characteristics}" Height="150"
                         AcceptsReturn="True" TextWrapping="Wrap">
                </TextBox>
                <ComboBox IsEditable="{Binding Editable}" ItemsSource="{Binding Types}"
                          SelectedValue="{Binding Inner.MaterialType}"></ComboBox>
                <TextBlock Text="{Binding Inner.MaterialType.Name}"></TextBlock>
                <ComboBox IsEditable="{Binding ReadOnly}" ItemsSource="{Binding Warehouses}"
                          SelectedValue="{Binding Inner.Warehouse}">
                </ComboBox>
                <TextBlock Text="{Binding Inner.Warehouse.Name}"></TextBlock>
                <ComboBox IsEditable="{Binding Editable}" ItemsSource="{Binding Suppliers}"
                          SelectedValue="{Binding Inner.Supplier}">
                </ComboBox>
                <TextBlock Text="{Binding Inner.Supplier.Name}"></TextBlock>
                <Button Command="{Binding SaveCommand}">Сохранить</Button>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>