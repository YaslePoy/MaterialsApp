<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MaterialsApp.ViewModels"
             xmlns:rui="using:ReactiveUI.Avalonia"
             xmlns:materialsApp="clr-namespace:MaterialsApp"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MaterialsApp.Views.MasterView"
             x:DataType="viewModels:MasterViewModel">
    <Grid ColumnDefinitions="250 *">
        <StackPanel Margin="10" Spacing="10">
            <HyperlinkButton Command="{Binding ToOrders}">Заказы</HyperlinkButton>
            <HyperlinkButton Command="{Binding ToOEq}">Оборудование</HyperlinkButton>
        </StackPanel>
        <rui:RoutedViewHost Grid.Column="1" Margin="10" Router="{Binding Router}">
            <rui:RoutedViewHost.ViewLocator>
                <materialsApp:ViewLocatorVM/>
            </rui:RoutedViewHost.ViewLocator>
        </rui:RoutedViewHost>
    </Grid>
</UserControl>
